<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">NO</th>
                    <th scope="col">Tittle</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.description}}</td>
                    <td><img height=50px width=50px src='/product-images/{{this._id}}.jpg'></td>
                    <td>
                        <a href='/admin/edit-product/{{this._id}}' class="btn btn-primary">Edit</a>
                        {{!-- <a href='/admin/delete-product?id={{this._id}}' class="btn btn-danger">Delete</a> --}}
                        <a href='/admin/delete-product/{{this._id}}' class="btn btn-danger" onClick="return confirm('Are you sure you want to delete this item?');">Delete</a>

                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>